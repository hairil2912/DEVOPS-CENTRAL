# DevOps Dashboard Backend Configuration
# Copy this file to .env and fill in the values

APP_NAME=DevOps Central Dashboard
APP_ENV=production
APP_DEBUG=false
APP_URL=https://dashboard.example.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=devops_dashboard
DB_USERNAME=devops_dashboard
DB_PASSWORD=change_this_password

# Security
APP_KEY=base64:generate_with_php_artisan_key_generate
JWT_SECRET=generate_random_secret_here
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (Optional - untuk cache & session)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Agent Settings
AGENT_TOKEN_LENGTH=64
AGENT_TOKEN_EXPIRY_DAYS=90
AGENT_HEARTBEAT_TIMEOUT=90

# Alerting
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_CHANNEL=file
LOG_LEVEL=info
LOG_MAX_FILES=30

# Metrics Retention
METRICS_RETENTION_DAYS=90
